generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model exercise_types {
  id            Int       @id @default(autoincrement())
  exercise_type String    @unique @db.VarChar(50)
  colour        String    @db.VarChar(7)
  records       records[]
}

model records {
  id             Int            @id @default(autoincrement())
  user_id        Int
  date_of_entry  DateTime       @db.Date
  exercise_type  String         @db.VarChar(50)
  sets           Int            @db.SmallInt
  reps           Int            @db.SmallInt
  remarks        String?
  created_at     DateTime       @default(now()) @db.Timestamp(6)
  updated_at     DateTime       @updatedAt @db.Timestamp(6)
  deleted_at     DateTime?      @db.Timestamp(6)
  
  exercise_types exercise_types @relation(fields: [exercise_type], references: [exercise_type], onDelete: NoAction, onUpdate: NoAction)
  users          users          @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}


model users {
  id              Int       @id @default(autoincrement())
  username        String    @unique @db.VarChar(50)
  hashed_password String
  records         records[]
}
