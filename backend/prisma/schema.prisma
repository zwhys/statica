generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id              Int      @id @default(autoincrement())
    username        String   @unique
    hashed_password String
    records         Record[] // Add this field
}

model ExerciseType {
    id             Int      @id @default(autoincrement())
    exercise_type  String   @unique
    records        Record[] // Add this field
}


model Record {
    id              Int           @id @default(autoincrement())
    user_id         Int
    date_of_entry   DateTime
    exercise_type   String
    sets            Int
    reps            Int
    remarks         String?
    user            User          @relation(fields: [user_id], references: [id])
    exerciseType    ExerciseType  @relation(fields: [exercise_type], references: [exercise_type])

    @@index([user_id], name: "idx_user_id")
    @@index([exercise_type], name: "idx_exercise_type")

    // Foreign keys
    @@map("records")
    @@unique([user_id, date_of_entry, exercise_type])
}
